@*SLIDESHOW*@
    <div >
        <div id="myCarousel" class="carousel slide" data-ride="carousel" style="max-width:1680px; text-align:center;">
            <!-- Indicators -->
            <ol class="carousel-indicators">
                <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                <li data-target="#myCarousel" data-slide-to="1"></li>
                <li data-target="#myCarousel" data-slide-to="2"></li>
                <li data-target="#myCarousel" data-slide-to="3"></li>
            </ol>

            <!-- Wrapper for slides -->
            <div class="carousel-inner">
                <div class="item active">
                    <img src="~/Images/1.jpg" alt="Los Angeles" style="width:100%; max-height:538px;">
                </div>

                <div class="item">
                    <img src="~/Images/2.jpg" alt="Chicago" style="width:1680px;max-height:538px;">
                </div>

                <div class="item">
                    <img src="~/Images/3.jpg" alt="New York" style="width:1680px; max-height:538px;">
                </div>
                <div class="item">
                    <img src="~/Images/4.jpg" alt="New York" style="width:1680px; max-height:538px;">
                </div>
            </div>

            <!-- Left and right controls -->
            <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#myCarousel" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>

